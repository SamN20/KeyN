# Flask Configuration
FLASK_SECRET_KEY=your-super-secret-key-here

# Database Configuration
FLASK_SQLALCHEMY_DATABASE_URI=sqlite:///instance/keyn_auth.db
FLASK_SQLALCHEMY_TRACK_MODIFICATIONS=False

# Email Configuration (Flask-Mail)
FLASK_MAIL_SERVER=smtp.gmail.com
FLASK_MAIL_PORT=587
FLASK_MAIL_USE_TLS=True
FLASK_MAIL_USERNAME=your-email@gmail.com
FLASK_MAIL_PASSWORD=your-app-password
FLASK_MAIL_DEFAULT_SENDER=your-email@gmail.com

# SSO Domain Configuration
# For production: .nolanbc.ca (allows sharing cookies across subdomains)
# For development: leave empty or use localhost
FLASK_SESSION_COOKIE_DOMAIN=.nolanbc.ca

# Cookie Security Settings
# For production with HTTPS: True
# For development: False
FLASK_SESSION_COOKIE_SECURE=True
FLASK_SESSION_COOKIE_HTTPONLY=True
# For cross-site requests: None (requires HTTPS)
# For same-site: Lax or Strict
FLASK_SESSION_COOKIE_SAMESITE=None

# CORS Configuration
# Comma-separated list of allowed origins for client apps
FLASK_ALLOWED_ORIGINS=https://album.nolanbc.ca,https://sq.nolanbc.ca,https://nolanbc.ca,https://keyn.nolanbc.ca

# Development Configuration
# For local testing, you might use:
# FLASK_SESSION_COOKIE_DOMAIN=
# FLASK_SESSION_COOKIE_SECURE=False
# FLASK_SESSION_COOKIE_SAMESITE=Lax
# FLASK_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000
